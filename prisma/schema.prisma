generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      String
  createdAt DateTime @default(now())
  bills     Bill[]
}

model Bill {
  id            Int        @id @default(autoincrement())
  subtotal      Float
  gstPercentage Float
  gstAmount     Float
  totalAmount   Float
  category      String
  description   String?
  filePath      String
  timestamp     DateTime   @default(now())
  createdById   Int?
  createdBy     User?      @relation(fields: [createdById], references: [id])
  items         BillItem[]
}

model BillItem {
  id           Int    @id @default(autoincrement())
  itemName     String
  pieces       Int
  pricePerUnit Float
  subtotal     Float
  billId       Int
  bill         Bill   @relation(fields: [billId], references: [id], onDelete: Cascade)
}
